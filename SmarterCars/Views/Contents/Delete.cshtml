@model SmarterCars.ViewModels.EmitContentViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>EmitContentViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContentId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContentId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LongDescription)
        </dt>
        <dd class = "images-of-interest col-sm-10">
            @Html.Raw(Model.LongDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/@Model.ImagePath" class="img-fluid"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatePosted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatePosted)
        </dd>
        <dt class = "col-sm-2">
            Category Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Category.CategoryName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShowOnHome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShowOnHome)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" class="insertion">
		<input type="hidden" asp-for="ContentId" name="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts{ 
	<script>
		let imagesContainer = document.getElementsByClassName('images-of-interest')[0];
		let formArea = document.getElementsByClassName('insertion')[0];

		console.log(imagesContainer)
		console.log(formArea)
		let allImages = imagesContainer.getElementsByTagName('img');
		console.log(allImages)
		
		if (allImages != null && allImages.length > 0) {
			for (let i = 0; i < allImages.length; i++) {
				child = createElement('input', '', 'ImagesToDelete', 'hidden');
				let value = allImages[i].src.slice(allImages[i].src.indexOf('images'))
				if (value != null && value != "") {
					child.setAttribute('value', value);
					formArea.appendChild(child);
				}
				
			}
		}
	</script>
}
