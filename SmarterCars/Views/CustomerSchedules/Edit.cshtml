@model SmarterCars.ViewModels.EditInspectionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Inspection</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="InspectionId"/>

            <div class="form-group">
                <label asp-for="EditedScheduleDate" class="control-label">Change inspection date</label>
                <input asp-for="EditedScheduleDate" class="form-control" />
                <span asp-validation-for="EditedScheduleDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CancelSchedule" /> Cancel Inspection?
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
